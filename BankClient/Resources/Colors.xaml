<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  MIDNIGHT FINANCE PALETTE  -->

    <!--  Основні кольори бренду  -->
    <Color x:Key="BrandPrimaryColor">#6C63FF</Color>
    <!--  Електричний фіолетовий  -->
    <Color x:Key="BrandPrimaryLightColor">#8B85FF</Color>
    <!--  Світліший фіолетовий  -->
    <Color x:Key="BrandPrimaryDarkColor">#5448C8</Color>
    <!--  Темніший фіолетовий  -->

    <Color x:Key="BrandSecondaryColor">#00F5FF</Color>
    <!--  Неоново-блакитний (Cyan)  -->
    <Color x:Key="BrandAccentColor">#FF6B9D</Color>
    <!--  Рожевий неон  -->

    <!--  Функціональні кольори (з неоновим ефектом)  -->
    <Color x:Key="SuccessColor">#00FFA3</Color>
    <!--  Неоново-зелений (Deposit)  -->
    <Color x:Key="SuccessGlowColor">#00FFA380</Color>
    <!--  З прозорістю для світіння  -->

    <Color x:Key="DangerColor">#FF3366</Color>
    <!--  Неоново-червоний (Withdraw)  -->
    <Color x:Key="DangerGlowColor">#FF336680</Color>
    <!--  З прозорістю  -->

    <Color x:Key="WarningColor">#FFD60A</Color>
    <!--  Електричний жовтий  -->
    <Color x:Key="InfoColor">#00D9FF</Color>
    <!--  Блакитний  -->

    <!--  Темні фони (градієнт)  -->
    <Color x:Key="BackgroundDarkColor">#0A0E27</Color>
    <!--  Майже чорний з синім  -->
    <Color x:Key="BackgroundMidColor">#141B3B</Color>
    <!--  Темно-синій  -->
    <Color x:Key="SurfaceColor">#1A2238</Color>
    <!--  Картки  -->
    <Color x:Key="SurfaceElevatedColor">#242B45</Color>
    <!--  Піднесені картки  -->

    <!--  Текст (світлий на темному)  -->
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <!--  Білий  -->
    <Color x:Key="TextSecondaryColor">#A0A0C0</Color>
    <!--  Сіро-блакитний  -->
    <Color x:Key="TextDisabledColor">#606080</Color>
    <!--  Темно-сірий  -->

    <!--  Бордери та лінії  -->
    <Color x:Key="DividerColor">#2A3150</Color>
    <!--  Ледь помітний  -->
    <Color x:Key="BorderColor">#3A4160</Color>
    <!--  Світліший  -->


    <!--  BRUSHES  -->

    <!--  Основні  -->
    <SolidColorBrush x:Key="BrandPrimaryBrush" Color="{StaticResource BrandPrimaryColor}" />
    <SolidColorBrush x:Key="BrandPrimaryLightBrush" Color="{StaticResource BrandPrimaryLightColor}" />
    <SolidColorBrush x:Key="BrandPrimaryDarkBrush" Color="{StaticResource BrandPrimaryDarkColor}" />
    <SolidColorBrush x:Key="BrandSecondaryBrush" Color="{StaticResource BrandSecondaryColor}" />
    <SolidColorBrush x:Key="BrandAccentBrush" Color="{StaticResource BrandAccentColor}" />

    <!--  Функціональні  -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="SuccessGlowBrush" Color="{StaticResource SuccessGlowColor}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />
    <SolidColorBrush x:Key="DangerGlowBrush" Color="{StaticResource DangerGlowColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}" />

    <!--  Фони  -->
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDarkColor}" />
    <SolidColorBrush x:Key="BackgroundMidBrush" Color="{StaticResource BackgroundMidColor}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="SurfaceElevatedBrush" Color="{StaticResource SurfaceElevatedColor}" />

    <!--  Текст  -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}" />

    <!--  Бордери  -->
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />


    <!--  ГРАДІЄНТИ  -->

    <!--  Градієнт фону  -->
    <LinearGradientBrush x:Key="BackgroundGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="{StaticResource BackgroundDarkColor}" />
        <GradientStop Offset="1" Color="{StaticResource BackgroundMidColor}" />
    </LinearGradientBrush>

    <!--  Градієнт для кнопки Deposit  -->
    <LinearGradientBrush x:Key="DepositGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Offset="0" Color="#00FFA3" />
        <GradientStop Offset="1" Color="#00D9FF" />
    </LinearGradientBrush>

    <!--  Градієнт для кнопки Withdraw  -->
    <LinearGradientBrush x:Key="WithdrawGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Offset="0" Color="#FF3366" />
        <GradientStop Offset="1" Color="#FF6B9D" />
    </LinearGradientBrush>

    <!--  Градієнт заголовка  -->
    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Offset="0" Color="#6C63FF" />
        <GradientStop Offset="1" Color="#00F5FF" />
    </LinearGradientBrush>

</ResourceDictionary>