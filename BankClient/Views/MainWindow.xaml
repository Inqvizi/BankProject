<Window
    x:Class="BankClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Midnight Finance"
    Width="450"
    Height="600">

    <Border
        Background="{StaticResource BackgroundGradientBrush}"
        BorderBrush="{StaticResource BorderBrush}"
        BorderThickness="1">

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Заголовок з градієнтом  -->
            <StackPanel Grid.Row="0" Margin="0,0,0,40">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="42"
                    FontWeight="Bold"
                    Text="MIDNIGHT">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Offset="0" Color="#6C63FF" />
                            <GradientStop Offset="1" Color="#00F5FF" />
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>

                <TextBlock
                    Margin="0,-5,0,0"
                    HorizontalAlignment="Center"
                    FontSize="24"
                    FontWeight="Light"
                    Foreground="{StaticResource TextSecondaryBrush}"
                    Text="FINANCE" />
            </StackPanel>

            <!--  Картка  -->
            <materialDesign:Card
                Grid.Row="1"
                Padding="30"
                Background="{StaticResource SurfaceBrush}"
                UniformCornerRadius="15">

                <materialDesign:Card.Effect>
                    <DropShadowEffect
                        BlurRadius="30"
                        Opacity="0.3"
                        ShadowDepth="0"
                        Color="#6C63FF" />
                </materialDesign:Card.Effect>

                <StackPanel>

                    <!--  Account ID  -->
                    <TextBox
                        Height="56"
                        Margin="0,0,0,25"
                        materialDesign:HintAssist.Foreground="{StaticResource TextSecondaryBrush}"
                        materialDesign:HintAssist.Hint="Account ID"
                        BorderBrush="{StaticResource BorderBrush}"
                        FontSize="16"
                        Foreground="{StaticResource TextPrimaryBrush}"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding AccountNumber}" />

                    <!--  Amount  -->
                    <TextBox
                        Height="56"
                        Margin="0,0,0,40"
                        materialDesign:HintAssist.Foreground="{StaticResource TextSecondaryBrush}"
                        materialDesign:HintAssist.Hint="Amount ($)"
                        BorderBrush="{StaticResource BorderBrush}"
                        FontSize="16"
                        Foreground="{StaticResource TextPrimaryBrush}"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding AmountToEnter}" />

                    <!--  Deposit button  -->
                    <Button
                        Height="56"
                        Margin="0,0,0,15"
                        BorderThickness="0"
                        Command="{Binding DepositCommand}"
                        Content="DEPOSIT"
                        Cursor="Hand"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Offset="0" Color="#00FFA3" />
                                <GradientStop Offset="1" Color="#00D9FF" />
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Effect>
                            <DropShadowEffect
                                BlurRadius="20"
                                Opacity="0.5"
                                ShadowDepth="0"
                                Color="#00FFA3" />
                        </Button.Effect>
                        <Button.Style>
                            <Style BasedOn="{StaticResource MaterialDesignRaisedButton}" TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect
                                                    BlurRadius="30"
                                                    Opacity="0.8"
                                                    ShadowDepth="0"
                                                    Color="#00FFA3" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!--  Withdraw button  -->
                    <Button
                        Height="56"
                        BorderThickness="0"
                        Command="{Binding WithdrawCommand}"
                        Content="WITHDRAW"
                        Cursor="Hand"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Offset="0" Color="#FF3366" />
                                <GradientStop Offset="1" Color="#FF6B9D" />
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Effect>
                            <DropShadowEffect
                                BlurRadius="20"
                                Opacity="0.5"
                                ShadowDepth="0"
                                Color="#FF3366" />
                        </Button.Effect>
                        <Button.Style>
                            <Style BasedOn="{StaticResource MaterialDesignRaisedButton}" TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect
                                                    BlurRadius="30"
                                                    Opacity="0.8"
                                                    ShadowDepth="0"
                                                    Color="#FF3366" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                </StackPanel>
            </materialDesign:Card>

        </Grid>
    </Border>
</Window>
