<Window
    x:Class="BankClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Midnight Finance"
    Width="1400"
    Height="1000"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <Style x:Key="TransactionItemStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceElevatedBrush}" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CurrencyCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceElevatedBrush}" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="15,12" />
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource BrandPrimaryBrush}" />
                    <Setter Property="BorderThickness" Value="2" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border
        Background="{StaticResource BackgroundGradientBrush}"
        BorderBrush="{StaticResource BorderBrush}"
        BorderThickness="1">

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="42"
                    FontWeight="Bold"
                    Text="MIDNIGHT">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Offset="0" Color="#6C63FF" />
                            <GradientStop Offset="1" Color="#00F5FF" />
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>

                <TextBlock
                    Margin="0,-5,0,0"
                    HorizontalAlignment="Center"
                    FontSize="24"
                    FontWeight="Light"
                    Foreground="{StaticResource TextSecondaryBrush}"
                    Text="FINANCE" />
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.3*" />
                    <ColumnDefinition Width="15" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="15" />
                    <ColumnDefinition Width="0.8*" />
                </Grid.ColumnDefinitions>

                <materialDesign:Card
                    Grid.Column="0"
                    Padding="25"
                    Background="{StaticResource SurfaceBrush}"
                    UniformCornerRadius="15">
                    <materialDesign:Card.Effect>
                        <DropShadowEffect
                            BlurRadius="30"
                            Opacity="0.3"
                            ShadowDepth="0"
                            Color="#6C63FF" />
                    </materialDesign:Card.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="{StaticResource BrandSecondaryBrush}"
                                Text="SELECT ACCOUNT" />

                            <ComboBox
                                Height="56"
                                Margin="0,0,0,20"
                                materialDesign:HintAssist.Hint="Choose account"
                                FontSize="16"
                                Foreground="{StaticResource TextPrimaryBrush}"
                                ItemsSource="{Binding Accounts}"
                                SelectedItem="{Binding SelectedAccount}"
                                Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock FontSize="14" Text="{Binding DisplayName}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <Border
                            Grid.Row="1"
                            Margin="0,0,0,25"
                            Padding="20,15"
                            Background="{StaticResource BackgroundMidBrush}"
                            CornerRadius="10">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontSize="12"
                                    Foreground="{StaticResource TextSecondaryBrush}"
                                    Text="CURRENT BALANCE" />
                                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,5,0"
                                        FontSize="32"
                                        FontWeight="Bold"
                                        Foreground="{StaticResource BrandSecondaryBrush}"
                                        Text="$" />
                                    <TextBlock
                                        FontSize="32"
                                        FontWeight="Bold"
                                        Foreground="{StaticResource TextPrimaryBrush}"
                                        Text="{Binding Balance, StringFormat=N2}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <StackPanel Grid.Row="2">
                            <Button
                                Height="45"
                                Margin="0,0,0,15"
                                BorderBrush="{StaticResource BrandPrimaryBrush}"
                                Command="{Binding ToggleTransferModeCommand}"
                                Foreground="{StaticResource TextPrimaryBrush}"
                                Style="{StaticResource MaterialDesignOutlinedButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,8,0"
                                        VerticalAlignment="Center"
                                        Kind="SwapHorizontal" />
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="TRANSFER MODE" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsTransferMode}" Value="True">
                                                        <Setter Property="Text" Value="NORMAL MODE" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Button>

                            <StackPanel Visibility="{Binding IsTransferMode, Converter={StaticResource BoolToVis}}">
                                <TextBox
                                    Height="56"
                                    Margin="0,0,0,15"
                                    materialDesign:HintAssist.Hint="Recipient account number"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    FontSize="16"
                                    Foreground="{StaticResource TextPrimaryBrush}"
                                    MaxLength="20"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Text="{Binding TransferToAccountNumber, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBox
                                    Height="56"
                                    Margin="0,0,0,15"
                                    materialDesign:HintAssist.Hint="Transfer amount ($)"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    FontSize="16"
                                    Foreground="{StaticResource TextPrimaryBrush}"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Text="{Binding TransferAmount, UpdateSourceTrigger=PropertyChanged}" />

                                <Border
                                    Margin="0,0,0,15"
                                    Padding="12,8"
                                    Background="{StaticResource BackgroundMidBrush}"
                                    CornerRadius="8">
                                    <StackPanel>
                                        <TextBlock
                                            Margin="0,0,0,5"
                                            FontSize="11"
                                            Foreground="{StaticResource TextSecondaryBrush}"
                                            Text="💡 Available accounts:" />
                                        <TextBlock
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource BrandPrimaryBrush}"
                                            Text="1111 • 2222 • 3333" />
                                    </StackPanel>
                                </Border>

                                <Button
                                    Height="56"
                                    Margin="0,0,0,20"
                                    BorderThickness="0"
                                    Command="{Binding TransferCommand}"
                                    Content="🔄 SEND TRANSFER"
                                    Cursor="Hand"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Offset="0" Color="#6C63FF" />
                                            <GradientStop Offset="1" Color="#8B85FF" />
                                        </LinearGradientBrush>
                                    </Button.Background>
                                    <Button.Effect>
                                        <DropShadowEffect
                                            BlurRadius="20"
                                            Opacity="0.5"
                                            ShadowDepth="0"
                                            Color="#6C63FF" />
                                    </Button.Effect>
                                </Button>
                            </StackPanel>

                            <StackPanel>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsTransferMode}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <TextBox
                                    Height="56"
                                    Margin="0,0,0,20"
                                    materialDesign:HintAssist.Hint="Amount ($)"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    FontSize="16"
                                    Foreground="{StaticResource TextPrimaryBrush}"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Text="{Binding AmountToEnter}" />

                                <Button
                                    Height="56"
                                    Margin="0,0,0,12"
                                    BorderThickness="0"
                                    Command="{Binding DepositCommand}"
                                    Content="💰 DEPOSIT"
                                    Cursor="Hand"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Offset="0" Color="#00FFA3" />
                                            <GradientStop Offset="1" Color="#00D9FF" />
                                        </LinearGradientBrush>
                                    </Button.Background>
                                    <Button.Effect>
                                        <DropShadowEffect
                                            BlurRadius="20"
                                            Opacity="0.5"
                                            ShadowDepth="0"
                                            Color="#00FFA3" />
                                    </Button.Effect>
                                </Button>

                                <Button
                                    Height="56"
                                    Margin="0,0,0,20"
                                    BorderThickness="0"
                                    Command="{Binding WithdrawCommand}"
                                    Content="💸 WITHDRAW"
                                    Cursor="Hand"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Offset="0" Color="#FF3366" />
                                            <GradientStop Offset="1" Color="#FF6B9D" />
                                        </LinearGradientBrush>
                                    </Button.Background>
                                    <Button.Effect>
                                        <DropShadowEffect
                                            BlurRadius="20"
                                            Opacity="0.5"
                                            ShadowDepth="0"
                                            Color="#FF3366" />
                                    </Button.Effect>
                                </Button>
                            </StackPanel>
                        </StackPanel>

                        <Border
                            Grid.Row="4"
                            Padding="15,10"
                            Background="{StaticResource BackgroundMidBrush}"
                            CornerRadius="8">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Foreground="{StaticResource InfoBrush}"
                                    Kind="InformationOutline" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="{StaticResource TextSecondaryBrush}"
                                    Text="{Binding Log}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card
                    Grid.Column="2"
                    Padding="25"
                    Background="{StaticResource SurfaceBrush}"
                    UniformCornerRadius="15">
                    <materialDesign:Card.Effect>
                        <DropShadowEffect
                            BlurRadius="30"
                            Opacity="0.3"
                            ShadowDepth="0"
                            Color="#00F5FF" />
                    </materialDesign:Card.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Foreground="{StaticResource BrandSecondaryBrush}"
                                    Kind="History" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Foreground="{StaticResource BrandSecondaryBrush}"
                                    Text="TRANSACTION HISTORY" />
                            </StackPanel>
                            <Border
                                Height="2"
                                Margin="0,10,0,0"
                                Background="{StaticResource DividerBrush}" />
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding TransactionHistory}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource TransactionItemStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>

                                                <Border
                                                    Grid.RowSpan="2"
                                                    Width="40"
                                                    Height="40"
                                                    Margin="0,0,15,0"
                                                    VerticalAlignment="Center"
                                                    CornerRadius="20">
                                                    <Border.Background>
                                                        <SolidColorBrush Opacity="0.2" Color="{StaticResource SuccessColor}" />
                                                    </Border.Background>
                                                    <materialDesign:PackIcon
                                                        Width="24"
                                                        Height="24"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center">
                                                        <materialDesign:PackIcon.Style>
                                                            <Style TargetType="materialDesign:PackIcon">
                                                                <Setter Property="Kind" Value="ArrowUp" />
                                                                <Setter Property="Foreground" Value="{StaticResource SuccessBrush}" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Type}" Value="Withdraw">
                                                                        <Setter Property="Kind" Value="ArrowDown" />
                                                                        <Setter Property="Foreground" Value="{StaticResource DangerBrush}" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </materialDesign:PackIcon.Style>
                                                    </materialDesign:PackIcon>
                                                </Border>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock
                                                        FontSize="13"
                                                        FontWeight="Bold"
                                                        Foreground="{StaticResource TextPrimaryBrush}"
                                                        Text="{Binding Type}" />
                                                    <TextBlock
                                                        FontSize="10"
                                                        Foreground="{StaticResource TextSecondaryBrush}"
                                                        Text="{Binding Timestamp, StringFormat='{}{0:MMM dd, HH:mm}'}" />
                                                </StackPanel>

                                                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                                    <TextBlock FontSize="13" FontWeight="Bold">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="{StaticResource SuccessBrush}" />
                                                                <Setter Property="Text" Value="{Binding Amount, StringFormat='+${0:N2}'}" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Type}" Value="Withdraw">
                                                                        <Setter Property="Foreground" Value="{StaticResource DangerBrush}" />
                                                                        <Setter Property="Text" Value="{Binding Amount, StringFormat='-${0:N2}'}" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <TextBlock
                                                        HorizontalAlignment="Right"
                                                        FontSize="9"
                                                        Foreground="{StaticResource TextSecondaryBrush}"
                                                        Text="{Binding Balance, StringFormat='${0:N2}'}" />
                                                </StackPanel>

                                                <Border
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    Grid.ColumnSpan="2"
                                                    Margin="0,5,0,0"
                                                    Padding="6,2"
                                                    HorizontalAlignment="Left"
                                                    CornerRadius="3">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background">
                                                                <Setter.Value>
                                                                    <SolidColorBrush Opacity="0.15" Color="{StaticResource SuccessColor}" />
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock
                                                        FontSize="9"
                                                        FontWeight="Medium"
                                                        Foreground="{StaticResource SuccessBrush}"
                                                        Text="{Binding Status}" />
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card
                    Grid.Column="4"
                    Padding="20"
                    Background="{StaticResource SurfaceBrush}"
                    UniformCornerRadius="15">
                    <materialDesign:Card.Effect>
                        <DropShadowEffect
                            BlurRadius="30"
                            Opacity="0.3"
                            ShadowDepth="0"
                            Color="#FFD60A" />
                    </materialDesign:Card.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="22"
                                    Height="22"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    Foreground="{StaticResource WarningBrush}"
                                    Kind="CurrencyUsd" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Foreground="{StaticResource WarningBrush}"
                                    Text="CURRENCY" />
                            </StackPanel>
                            <Border
                                Height="2"
                                Margin="0,8,0,0"
                                Background="{StaticResource DividerBrush}" />
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding CurrencyRates}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource CurrencyCardStyle}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.RowSpan="2"
                                                    Margin="0,0,12,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="28"
                                                    Text="{Binding Flag}" />

                                                <TextBlock
                                                    Grid.Column="1"
                                                    FontSize="14"
                                                    FontWeight="Bold"
                                                    Foreground="{StaticResource TextPrimaryBrush}"
                                                    Text="{Binding CurrencyCode}" />

                                                <TextBlock
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    FontSize="10"
                                                    Foreground="{StaticResource TextSecondaryBrush}"
                                                    Text="{Binding CurrencyName}" />

                                                <TextBlock
                                                    Grid.RowSpan="2"
                                                    Grid.Column="2"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    FontSize="15"
                                                    FontWeight="Bold"
                                                    Foreground="{StaticResource TextPrimaryBrush}"
                                                    Text="{Binding Rate, StringFormat='{}{0:F4}'}" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <Button
                            Grid.Row="2"
                            Height="40"
                            Margin="0,10,0,0"
                            BorderBrush="{StaticResource WarningBrush}"
                            Command="{Binding RefreshCommand}"
                            Foreground="{StaticResource TextPrimaryBrush}"
                            Style="{StaticResource MaterialDesignOutlinedButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="18"
                                    Height="18"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    Kind="Refresh" />
                                <TextBlock VerticalAlignment="Center" Text="REFRESH RATES" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </Border>
</Window>